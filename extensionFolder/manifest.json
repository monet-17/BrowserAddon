{
    "manifest_version": 2,
    "name": "Access made easy",
    "description": "This is an extension that makes web-sites be more usable when it comes to restricted accessibility.",
    "version": "0.1.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "48": "icon.png"
    },
    "permissions": ["tabs"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Accessibility Extension",
        "default_popup": "popup.html"

    }
}